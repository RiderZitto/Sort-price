public class Footballers {
    String name;
    String firstname;
    float price;
    
    // Construcctor

    public Footballers(String name, String firstname, float price) {
        this.name = name;
        this.firstname = firstname;
        this.price = price;
    }
    
    // method to get the price

    public float getPrice() {
        return price;
    }

    // Display data
    @Override
    public String toString() {
        return "Footballers{" + "name=" + name + ", firstname=" + firstname + ", price=" + price + '}';
    }
    
    
    
    
    
    
}
